{
    "name": "nextapps/laravel-poeditor-sync",
    "description": "Upload and download POEditor translations",
    "keywords": [
        "nextapps",
        "laravel",
        "poeditor"
    ],
    "homepage": "https://github.com/nextapps/laravel-poeditor-sync",
    "license": "MIT",
    "type": "library",
    "authors": [
        {
            "name": "GÃ¼nther Debrauwer",
            "email": "gunther@nextapps.be",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.1|^8.2|^8.3",
        "guzzlehttp/guzzle": "^7.0",
        "illuminate/filesystem": "^9.0|^10.0|^11.0",
        "illuminate/http": "^9.0|^10.0|^11.0",
        "illuminate/support": "^9.0|^10.0|^11.0",
        "symfony/var-exporter": "^5.0|^6.0"
    },
    "require-dev": {
        "adamwojs/php-cs-fixer-phpdoc-force-fqcn": "^2.0",
        "friendsofphp/php-cs-fixer": "^3.0",
        "orchestra/testbench": "^7.0|^8.0|^9.0",
        "phpunit/phpunit": "^9.1|^10.0",
        "squizlabs/php_codesniffer": "^3.6"
    },
    "autoload": {
        "psr-4": {
            "NextApps\\PoeditorSync\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "NextApps\\PoeditorSync\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage",
        "lint": "vendor/bin/php-cs-fixer fix && vendor/bin/phpcs --colors --report-full",
        "lint-dry": "vendor/bin/php-cs-fixer fix --dry-run && vendor/bin/phpcs --colors --report-full"
    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "providers": [
                "NextApps\\PoeditorSync\\PoeditorSyncServiceProvider"
            ]
        }
    }
}
